<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Fragrance</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>

    <h1>Edit <%= fragrance.name %></h1>

    <form
      action="/users/<%= user._id %>/fragrances/<%= fragrance._id %>?_method=PUT"
      method="POST"
    >
      <label for="name">Fragrance Name:</label>
      <input
        type="text"
        name="name"
        id="name"
        value="<%= fragrance.name %>"
        required
      />

      <label for="brand">Brand:</label>
      <input
        type="text"
        name="brand"
        id="brand"
        value="<%= fragrance.brand %>"
        required
      />

      <button type="submit">Update Scent</button>
    </form>

    <a href="/users/<%= user._id %>/fragrances">Cancel</a>
  </body>
</html>
