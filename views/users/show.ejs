<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

<body>
  <%- include('../partials/_navbar.ejs') %>

  <div class="container">
    <h1><%= userToShow.username %>'s Vault</h1>
    
    <a href="/users" style="color: #666;">‚Üê Back To Community</a>
    <hr />

    <% if (userToShow.fragrances.length > 0) { %>
      <ul>
        <% userToShow.fragrances.forEach(fragrance => { %>
          <li>
            <strong><%= fragrance.name %></strong> - <%= fragrance.brand %>
            </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>This User Hasn't Added Any Fragrances To Their Vault Yet.</p>
    <% } %>
  </div>
</body>
</html>